<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.outingcard.ApplyGoOutFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorGray"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/go_out_apply_gl_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/go_out_apply_back_btn"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/go_out_apply_tv"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/go_out_apply_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/go_out_apply_tv"
            android:textColor="@color/colorBlack"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/go_out_apply_gl_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/date_tv"
            android:textColor="@color/colorPurple"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/go_out_apply_date_edit_layout"
            app:layout_constraintStart_toStartOf="@+id/go_out_apply_gl_left"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/go_out_apply_date_edit_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint=" "
            app:errorEnabled="true"
            app:layout_constraintBottom_toTopOf="@id/reason_tv"
            app:layout_constraintEnd_toStartOf="@+id/go_out_apply_gl_right"
            app:layout_constraintStart_toStartOf="@+id/go_out_apply_gl_left"

            app:layout_constraintTop_toBottomOf="@+id/date_tv">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/go_out_apply_date_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="4dp"
                android:textColor="@color/colorPurple"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/reason_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사유"
            android:textColor="@color/colorPurple"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/go_out_apply_reason_edit_layout"
            app:layout_constraintStart_toStartOf="@+id/go_out_apply_gl_left"
            app:layout_constraintTop_toBottomOf="@+id/go_out_apply_date_edit_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/go_out_apply_reason_edit_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint=" "
            app:errorEnabled="true"
            app:layout_constraintBottom_toTopOf="@id/time_tv"
            app:layout_constraintEnd_toStartOf="@+id/go_out_apply_gl_right"
            app:layout_constraintStart_toStartOf="@+id/go_out_apply_gl_left"
            app:layout_constraintTop_toBottomOf="@+id/reason_tv">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/go_out_apply_reason_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="4dp"
                android:textColor="@color/colorPurple"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/go_out_is_disease_tv"
                android:text="질병 외출로 신청하시겠습니까 ? "
                android:textSize="12sp"
                android:textColor="@color/colorPurple"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_tv"
            android:textColor="@color/colorPurple"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/go_out_apply_time_edit_layout"
            app:layout_constraintStart_toStartOf="@+id/go_out_apply_gl_left"
            app:layout_constraintTop_toBottomOf="@+id/go_out_apply_reason_edit_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/go_out_apply_time_edit_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint=" "
            app:errorEnabled="true"
            app:layout_constraintBottom_toTopOf="@id/place_tv"
            app:layout_constraintEnd_toStartOf="@+id/go_out_apply_gl_right"
            app:layout_constraintStart_toStartOf="@+id/go_out_apply_gl_left"
            app:layout_constraintTop_toBottomOf="@+id/time_tv">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/go_out_apply_time_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="4dp"
                android:textColor="@color/colorPurple"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_tv"
            android:textColor="@color/colorPurple"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/go_out_apply_place_edit_layout"
            app:layout_constraintStart_toStartOf="@+id/go_out_apply_gl_left"
            app:layout_constraintTop_toBottomOf="@+id/go_out_apply_time_edit_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/go_out_apply_place_edit_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint=" "
            app:errorEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/go_out_apply_gl_right"
            app:layout_constraintStart_toStartOf="@+id/go_out_apply_gl_left"
            app:layout_constraintTop_toBottomOf="@+id/place_tv">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/go_out_apply_place_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="4dp"
                android:textColor="@color/colorPurple"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/go_out_apply_gl_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/go_out_apply_gl_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="신청하기"
        android:textColor="@color/colorWhite"
        android:background="@drawable/radius_purple_view"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/go_out_apply_gl_right2"
        app:layout_constraintStart_toStartOf="@+id/go_out_apply_gl_left2"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/go_out_apply_gl_left2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/go_out_apply_gl_right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/go_out_apply_gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/go_out_apply_gl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />

</androidx.constraintlayout.widget.ConstraintLayout>