<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/outing_history_card"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/go_out_apply_view"
                android:layout_width="2dp"
                android:layout_height="17dp"
                android:layout_marginStart="16dp"
                android:background="@color/colorPurple"
                app:layout_constraintBottom_toTopOf="@id/outing_history_reason_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/outing_history_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="2020-06-12"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/outing_history_reason_tv"
                app:layout_constraintStart_toEndOf="@+id/go_out_apply_view"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/outing_history_reason_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="사유 : 팔을 다쳐서 병원에 가야합니다."
                android:textColor="@color/colorDarkGray"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/outing_history_place_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/outing_history_date_tv" />

            <TextView
                android:id="@+id/outing_history_place_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="장소 : 대마병원"
                android:textColor="@color/colorDarkGray"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/outing_history_reason_tv" />

            <TextView
                android:id="@+id/outing_history_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="승인 만료"
                android:textColor="@color/colorPurple"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/outing_history_reason_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.45" />

            <TextView
                android:id="@+id/outing_history_online_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="온라인 학생증 >"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/outing_history_state_tv"
                app:layout_constraintVertical_bias="0.75" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>