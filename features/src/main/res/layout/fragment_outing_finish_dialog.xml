<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.dms.sms.feature.outing.viewmodel.OutingAccessViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_dialog_view"
        tools:context=".feature.outing.dialog.OutingFinishDialog">

        <TextView
            android:id="@+id/outing_finish_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:text="외출 종료"
            android:textColor="@color/colorPurple"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="120dp"
            android:layout_marginTop="20dp"
            android:text="외출을 종료하시겠습니까?"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@id/textView17"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/outing_finish_tv"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(현재 진행중인 외출을 종료합니다.)"
            android:textSize="9sp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/outing_finish_cancel_tv"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <TextView
            android:id="@+id/outing_finish_confirm_tv"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="@{()->vm.clickOutingFinishConfirm()}"
            android:includeFontPadding="false"
            android:text="확인"
            android:textColor="@color/colorPurple"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/outing_finish_cancel_tv" />

        <TextView
            android:id="@+id/outing_finish_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="@{()->vm.clickOutingFinishCancel()}"
            android:includeFontPadding="false"
            android:text="취소"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/outing_finish_confirm_tv"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>